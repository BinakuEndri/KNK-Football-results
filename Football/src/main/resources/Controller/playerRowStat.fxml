        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="80.0" prefHeight="80.0" valignment="CENTER" vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <ImageView fx:id="playerImage" fitHeight="80.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1">
            <image>
                <Image url="@../images/Premier%20League/Mikel%20Arteta/man51018.png" />
            </image>
        </ImageView>
        <Label fx:id="playerGoals" alignment="CENTER" prefHeight="101.0" prefWidth="170.0" style="-fx-border-color: #CED4DA; -fx-border-width: 0 2 0 0;" text="5" textFill="WHITE">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>
        <ImageView fx:id="playerTeam" fitHeight="78.0" fitWidth="72.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="2">
            <image>
                <Image url="@../images/Serie%20A/arsenal_fc_480px.png" />
            </image>
        </ImageView>
        <Label fx:id="playerName" alignment="CENTER" prefHeight="113.0" prefWidth="211.0" style="-fx-border-color: #CED4DA; -fx-border-width: 0 2 0 2;" text="Mikel Arteta" textFill="WHITE" GridPane.columnIndex="3">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>
        <Label fx:id="playerPosition" alignment="CENTER" prefHeight="113.0" prefWidth="211.0" style="-fx-border-color: #CED4DA; -fx-border-width: 0 2 0 0;" text="CDM" textFill="WHITE" GridPane.columnIndex="4">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>
      <ImageView fx:id="playerNation" fitHeight="55.0" fitWidth="75.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="5">
         <image>
            <Image url="@../images/Nations/al.png" />
         </image>
      </ImageView>
    </children>


</GridPane>
