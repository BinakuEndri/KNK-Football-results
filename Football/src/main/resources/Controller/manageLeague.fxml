<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.ManageLeagueController">
    <children>
        <BorderPane prefHeight="700.0" style="-fx-background-color: #CED4DA;" AnchorPane.topAnchor="0.0">
            <left>
                <VBox prefHeight="0.0" prefWidth="300.0" style="-fx-background-color: #343A40; -fx-background-radius: 0 50 0 0;" BorderPane.alignment="CENTER">
                    <children>
                        <fx:include source="adminNavbar.fxml" />
                    </children>
                </VBox>
            </left>
            <center>
                <BorderPane prefHeight="200.0" prefWidth="900.0" BorderPane.alignment="CENTER">
                    <center>
                        <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                            <children>
                                <AnchorPane layoutX="27.0" layoutY="67.0" prefHeight="567.0" prefWidth="841.0" style="-fx-background-color: #ffffff; -fx-background-radius: 30 30 30 30;">
                                    <children>
                                        <VBox layoutX="53.0" layoutY="47.0" prefHeight="355.0" prefWidth="226.0" spacing="10.0">
                                            <children>
                                                <Label prefHeight="18.0" prefWidth="72.0" text="ID" />
                                                <TextField fx:id="txtLeagueId" prefHeight="37.0" prefWidth="264.0" />
                                                <Label prefHeight="18.0" prefWidth="79.0" text="Name" />
                                                <TextField fx:id="txtLeagueName" prefHeight="36.0" prefWidth="264.0" />
                                                <Label prefHeight="18.0" prefWidth="72.0" text="Logo" />
                                                <VBox alignment="CENTER" prefHeight="121.0" prefWidth="198.0" style="-fx-background-color: #CED4DA;">
                                       <children>
                                                        <ImageView fx:id="leaguePhoto" fitHeight="142.0" fitWidth="130.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true" />
                                       </children>
                                                </VBox>
                                                  <Button fx:id="btnBrowseImage" mnemonicParsing="false" onAction="#browseImage" prefHeight="31.0" prefWidth="97.0" text="Browes Photo" />
                                            </children>
                                        </VBox>
                                        <VBox layoutX="336.0" layoutY="49.0" prefHeight="472.0" prefWidth="455.0" spacing="10.0">
                                            <children>
                                    <TableView fx:id="tableLeagues" prefHeight="474.0" prefWidth="455.0">
                                      <columns>
                                        <TableColumn fx:id="colLeagueId" text="ID" />
                                        <TableColumn fx:id="colLeagueImage" prefWidth="140.0" text="Logo" />
                                          <TableColumn fx:id="colLeagueName" prefWidth="124.0" text="Name" />
                                          <TableColumn fx:id="colLeagueNumberOfTeams" prefWidth="110.0" text="Numer of Teams" />
                                      </columns>
                                    </TableView>
                                            </children>
                                        </VBox>
                                        <Button fx:id="btnAddLeague" layoutX="53.0" layoutY="421.0" mnemonicParsing="false" onAction="#addLeague" prefHeight="38.0" prefWidth="92.0" text="Add League" />
                              <Button fx:id="btnUpdateLeague" layoutX="172.0" layoutY="420.0" mnemonicParsing="false" onAction="#updateLeague" prefHeight="40.0" prefWidth="92.0" text="Update" />
                              <Button fx:id="btnClearLeague" layoutX="53.0" layoutY="478.0" mnemonicParsing="false" onAction="#clearLeagueFields" prefHeight="40.0" prefWidth="92.0" text="Clear" />
                              <Button fx:id="btnDeleteLeague" layoutX="172.0" layoutY="478.0" mnemonicParsing="false" onAction="#deleteLeague" prefHeight="40.0" prefWidth="92.0" text="Delete" />
                                    </children>
                                </AnchorPane>
                            </children>
                        </AnchorPane>
                    </center></BorderPane>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
